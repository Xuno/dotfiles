# VO settings
vo=opengl-hq:srgb:approx-gamma:scaler-resizes-only:lscale=spline64:cscale=sharpen5:indirect,xv,

# Subtitle settings
sub-codepage=enca:zh:unicode
sub-auto=fuzzy
ass-vsfilter-aspect-compat=no
ass-vsfilter-blur-compat=no
ass-vsfilter-color-compat=no
ass-use-margins

# OSD settings
osd-border-color='#40000000'
osd-color='#40FFFFFF'
osd-border-size=2
osd-level=3

# Screenshot settings
screenshot-format=png
screenshot-png-compression=9
screenshot-template=/tmp/%F-%P

# Misc settings
heartbeat-cmd="xscreensaver-command -deactivate >&- 2>&- &"
alang=jpn,ja,jp,eng,en
hr-seek-demuxer-offset=0.3
no-audio-display
audio-pitch-correction

[verbose]
profile-desc="verbose output"
msg-level=all=v:global=status:input=status

[xv]
profile-desc="xv video output"
vo=xv,

[fast]
profile-desc="opengl video output(faster)"
vo=opengl,xv,

[slow]
profile-desc="opengl video output(slower)"
# no-scale-sep is not desired, but implied by no-indirect
vo=opengl-hq:srgb:approx-gamma:scaler-resizes-only:lscale=spline64:cscale=spline64:no-indirect:no-scale-sep:fancy-downscaling:fbo-format=rgba32f,xv,

[smooth]
profile-desc="smooth-motion for opengl vo"
vo=opengl-hq:srgb:approx-gamma:scaler-resizes-only:lscale=spline64:cscale=sharpen5:indirect:smoothmotion:smoothmotion-threshold=0.2,xv,

[va]
profile-desc="vaapi video output"
vo=vaapi:scaling=hq,

[vdp]
profile-desc="vdpau video output"
vo=vdpau:hqscaling=1,

[dac]
profile-desc="output to USB DAC"
ao=alsa:device=[hw:1,0]
audio-format=s32

[speedy]
profile-desc="save you a few minutes for (...)"
af-pre=scaletempo
speed=1.6

[pullup]
profile-desc="enable pullup IVTC filter"
vf-add=pullup
msg-level=vf=v

[hwdec]
profile-desc="enable hardware decoding (auto)"
hwdec=auto

[va-hwdec]
profile-desc="enable hardware decoding (vaapi)"
hwdec=vaapi-copy

[vpd-hwdec]
profile-desc="enable hardware decoding (vdpau)"
hwdec=vdpau

[va-deint]
profile-desc="vaapi deint"
vf-add=vavpp:deint=first-field
msg-level=vf=v

[va-deint-bob]
profile-desc="vaapi deint(bob)"
vf-add=vavpp:deint=bob
msg-level=vf=v

[vdp-deint]
profile-desc="vapau deint"
vf-add=vdpaupp:deint=yes:deint-mode=temporal-spatial
msg-level=vf=v

[vdp-deint-fast]
profile-desc="vapau deint(fast)"
vf-add=vdpaupp:deint=yes:deint-mode=first-field
msg-level=vf=v

[vdp-deint-bob]
profile-desc="vapau deint(bob)"
vf-add=vdpaupp:deint=yes:deint-mode=bob
msg-level=vf=v

[vdp-ivtc]
profile-desc="vapau deint(ivtc)"
vf-add=vdpaupp:deint=yes:deint-mode=temporal-spatial:pullup
msg-level=vf=v

[vdp-sharpen]
profile-desc="vapau sharpen (for testing only, don't use this directly)"
vf-add=vdpaupp:sharpen=1.0
msg-level=vf=v

[vdp-denoise]
profile-desc="vapau denoise (for testing only, don't use this directly)"
vf-add=vdpaupp:denoise=1.0
msg-level=vf=v

[verify]
profile-desc="verify media files, attempt to detect decoding errors"
vo=null
ao=null:untimed
untimed
msg-level=all=info:file=v:statusline=status:cache=fatal
vd-lavc-bitexact

[bigcache]
profile-desc="bigcache (mainly for verify)"
cache=512000

[upscale]
profile-desc="upscale(yuv444p16 output)"
vf-add=vapoursynth=~~/upscale.vpy
vf-add=dsize:-1:-1
video-unscaled
msg-level=vf=v

[upscale420]
profile-desc="upscale(yuv420p16 output, faster)"
vf-add=vapoursynth=~~/upscale420.vpy
vf-add=dsize:-1:-1
video-unscaled
msg-level=vf=v

[nnedi3]
profile-desc="nnedi3 upscale to 2x with center shift corrected, yuv420p8 output"
vf-add=vapoursynth=~~/nnedi3.vpy
msg-level=vf=v

[deband]
profile-desc="debanding with f3kdb"
vf-add=vapoursynth=~~/deband.vpy
msg-level=vf=v

[fm]
profile-desc="field match(vivtc)"
vf-add=vapoursynth=~~/fm.vpy:6:1
msg-level=vf=v

[fm-bff]
profile-desc="field match(vivtc, bottom-field-first)"
vf-add=vapoursynth=~~/fm-bff.vpy:6:1
msg-level=vf=v

[yadif]
profile-desc="yadif deint"
vf-add=yadif
msg-level=vf=v

[dec]
profile-desc="decimate(ffmpeg filter)"
vf-add=lavfi="fps=30000/1001,decimate"
msg-level=vf=v

[singlecore]
profile-desc="save CPU for other works"
vd-lavc-threads=1
ad-lavc-threads=1
demuxer-thread=no
