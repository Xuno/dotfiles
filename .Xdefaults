
!urxvt.font: xft:Monaco:regular:pixelsize=12
!urxvt.boldFont: xft:Monaco:bold:pixelsize=12
!urxvt.italicFont: xft:Monaco:italic:pixelsize=12
!urxvt.boldItalicFont: xft:Monaco:bold:italic:pixelsize=12
urxvt.font: xft:Dina:style=Regular
urxvt.boldFont: xft:Dina:style=Bold
urxvt.italicFont: xft:Dina:style=Italic
urxvt.boldItalicFont: xft:Dina:style=Bold\ Italic

urxvt.perl-ext-common:  default,tabbed,fullscreen,keyboard-select,clipboard

urxvt.copyCommand:  xclip -i -selection clipboard
urxvt.pasteCommand: xclip -o -selection clipboard

urxvt.keysym.S-Escape: perl:keyboard-select:activate
urxvt.keysym.S-F11: perl:fullscreen:switch

urxvt.keysym.C-A-c: perl:clipboard:copy
urxvt.keysym.C-A-v: perl:clipboard:paste

urxvt.keysym.S-F1: command: \
    \033]710;xft:Dina:style=Regular\007 \
    \033]711;xft:Dina:style=Bold\007 \
    \033]712;xft:Dina:style=Italic\007 \
    \033]713;xft:Dina:style=Bold Italic\007

urxvt.keysym.S-F2: command: \
    \033]710;xft:Monaco:regular:pixelsize=12,xft:Dina\007 \
    \033]711;xft:Monaco:bold:pixelsize=12,xft:Dina\007 \
    \033]712;xft:Monaco:italic:pixelsize=12,xft:Dina\007 \
    \033]713;xft:Monaco:bold:italic:pixelsize=12,xft:Dina\007

*background: #000000
*foreground: #ffffff

*color0: #000000
*color1: #ee6363
*color2: #73ba3e
*color3: #baa33e
*color4: #3e73ba
*color5: #ac3885
*color6: #3ebaba
*color7: #eeeeee
*color8: #333333
*color9: #cc4444
*color10: #4d8728
*color11: #877d28
*color12: #284d87
*color13: #812973
*color14: #288787
*color15: #aaaaaa

urxvt.inputMethod: ibus
urxvt.imLocale: en_US.UTF-8
urxvt.imFont: -*-medium-r-*-*-*

Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintlight
Xft.rgba: rgb

urxvt.depth: 32
urxvt.background: [80]black

urxvt.tintColor: white
urxvt.shading: 30
urxvt.underlineColor: yellow

urxvt.scrollstyle: plain
urxvt.visualBell: false
urxvt.urgentOnBell: true

urxvt.saveLines: 65536

Xcursor.theme: Vanilla-DMZ
Xcursor.size: 16
