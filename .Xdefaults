urxvt.inputMethod: fcitx
urxvt.preeditType: OverTheSpot,OnTheSpot,Root
urxvt.imLocale: zh_CN.UTF-8
urxvt.imFont: -*-medium-r-*-*-*
urxvt.iso14755: false

Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintlight
Xft.rgba: rgb

urxvt.depth: 32

urxvt.background: [80]black

urxvt.underlineColor: yellow
urxvt.fading: 20
urxvt.fadeColor: #000000

urxvt.scrollstyle: plain
urxvt.scrollBar: false
urxvt.visualBell: false
urxvt.urgentOnBell: true

urxvt.saveLines: 65536

Xcursor.theme: Vanilla-DMZ
Xcursor.size: 16

xscreensaver.timeout: 10
xscreensaver.splash: false
xscreensaver.mode: blank
xscreensaver.dpmsEnabled: true
xscreensaver.dpmsQuickOff: true
