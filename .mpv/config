# VO settings
vo-defaults=opengl-hq:scale=spline64:cscale=spline64:dscale=mitchell:target-prim=bt.709:target-trc=srgb:scaler-resizes-only
vo=opengl-hq,

# Subtitle settings
sub-codepage=enca:zh:unicode
sub-auto=fuzzy
ass-vsfilter-aspect-compat=no
ass-vsfilter-blur-compat=no
ass-vsfilter-color-compat=no
sub-use-margins
stretch-image-subs-to-screen

# OSD settings
osd-border-color='#40000000'
osd-color='#40FFFFFF'
osd-border-size=2
osd-level=3

# Screenshot settings
screenshot-format=png
screenshot-png-compression=9
screenshot-template=/tmp/%F-%P
screenshot-tag-colorspace=yes

# Misc settings
hr-seek-demuxer-offset=0.3
no-audio-display
af-add=rubberband
demuxer-mkv-fix-timestamps
ad=lavc:libdcadec

[sync]
profile-desc="sync to video"
video-sync=display-resample-vdrop

[verbose]
profile-desc="verbose output"
msg-level=all=v:global=status:input=status

[xv]
profile-desc="xv video output"
vo=xv,

[fast]
profile-desc="opengl video output (faster)"
vo-defaults=opengl-hq:scale=sharpen3:cscale=bilinear:dscale=mitchell:target-prim=bt.709:target-trc=srgb:scaler-resizes-only

[slow]
profile-desc="opengl video output (slower)"
vo-defaults=opengl-hq:scale=haasnsoft:cscale=spline64:dscale=mitchell:target-prim=bt.709:target-trc=srgb:scaler-resizes-only

[smooth]
profile-desc="smoothmotion (with interpolation)"
vo=opengl-hq:interpolation:tscale=oversample:tscale-param1=.3,

[deband]
profile-desc="deband (with custom shader)"
vo=opengl-hq:source-shader=~~/deband.glsl,

[va]
profile-desc="vaapi video output"
vo=vaapi:scaling=fast,

[vdp]
profile-desc="vdpau video output"
vo=vdpau,

[dac]
profile-desc="output to USB DAC"
ao=alsa:device=[hw:1,0]
audio-format=s32

[speedy]
profile-desc="save you a few minutes for (...)"
speed=1.6

[pullup]
profile-desc="enable pullup IVTC filter"
vf-add=pullup
msg-level=vf=v

[hwdec]
profile-desc="enable hardware decoding (auto)"
hwdec=auto

[va-hwdec]
profile-desc="enable hardware decoding (vaapi)"
hwdec=vaapi-copy

[vdp-hwdec]
profile-desc="enable hardware decoding (vdpau)"
hwdec=vdpau

[va-deint]
profile-desc="vaapi deint"
vf-add=vavpp:deint=first-field
msg-level=vf=v

[va-deint-bob]
profile-desc="vaapi deint(bob)"
vf-add=vavpp:deint=bob
msg-level=vf=v

[vdp-deint]
profile-desc="vapau deint"
vf-add=vdpaupp:deint=yes:deint-mode=temporal-spatial
msg-level=vf=v

[vdp-deint-fast]
profile-desc="vapau deint(fast)"
vf-add=vdpaupp:deint=yes:deint-mode=first-field
msg-level=vf=v

[vdp-deint-bob]
profile-desc="vapau deint(bob)"
vf-add=vdpaupp:deint=yes:deint-mode=bob
msg-level=vf=v

[vdp-ivtc]
profile-desc="vapau deint(ivtc)"
vf-add=vdpaupp:deint=yes:deint-mode=temporal-spatial:pullup
msg-level=vf=v

[verify]
profile-desc="verify media files, attempt to detect decoding errors"
vo=null
ao=null:untimed
untimed
msg-level=all=info:file=v:statusline=status:cache=fatal
vd-lavc-bitexact

[bigcache]
profile-desc="bigcache (mainly for verify)"
cache=yes
cache-default=1024000
cache-secs=60

[upscale]
profile-desc="upscale (yuv444p16 output)"
vf-add=vapoursynth=~~/upscale.vpy:10:4
vf-add=dsize:-1:-1
video-unscaled
msg-level=vf=v

[upscale420]
profile-desc="upscale (yuv420p16 output, faster)"
vf-add=vapoursynth=~~/upscale420.vpy:10:4
vf-add=dsize:-1:-1
video-unscaled
msg-level=vf=v

[nnedi3]
profile-desc="nnedi3 upscale to 2x with center shift corrected, yuv420p8 output"
vf-add=vapoursynth=~~/nnedi3.vpy:10:4
msg-level=vf=v

[f3kdb]
profile-desc="debanding with f3kdb"
vf-add=vapoursynth=~~/deband.vpy:10:4
msg-level=vf=v

[fm]
profile-desc="field match (vivtc)"
vf-add=vapoursynth=~~/fm.vpy:10:1
msg-level=vf=v

[fm-bff]
profile-desc="field match (vivtc, bottom-field-first)"
vf-add=vapoursynth=~~/fm-bff.vpy:10:1
msg-level=vf=v

[yadif]
profile-desc="yadif deint"
vf-add=yadif
msg-level=vf=v

[dec]
profile-desc="decimate from NTSC ratio (ffmpeg filter)"
vf-add=lavfi="fps=30000/1001,decimate"
msg-level=vf=v

[mvtools]
profile-desc="smoothmotion (with mvtools vapoursynth plugin)"
vf-add=vapoursynth=~~/mvtools.vpy:10:4
msg-level=vf=v

[yadif]
profile-desc="yadif deint"
vf-add=yadif
msg-level=vf=v

[singlecore]
profile-desc="save CPU for other works"
vd-lavc-threads=1
ad-lavc-threads=1
demuxer-thread=no
